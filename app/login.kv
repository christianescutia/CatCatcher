Screen:

    MDCard:
        size_hint: None, None
        size: 600, 800
        pos_hint: { "center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 50
        spacing: 50
        orientation: "vertical"

        MDIcon:
            id: app_icon
            icon: "cat"
            font_size: 140
            padding_x: 175
    
        MDLabel:
            id: welcome_label
            text: "Welcome"
            font_size: 80
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 20
    
        MDTextFieldRound:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 400
            font_size: 32
            pos_hint: { "center_x": 0.5 }

        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 400
            font_size: 32
            pos_hint: { "center_x": 0.5 }
            password: True
        
        MDTextFieldRound:
            id: password_confirm
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 400
            font_size: 32
            pos_hint: { "center_x": 0.5 }
            password: True

        MDRoundFlatButton:
            text: 'Login'
            font_size: 24
            pos_hint: { "center_x": 0.5 }
            on_press: app.logger()
        
        MDRoundFlatButton:
            text: 'Clear'
            font_size: 24
            pos_hint: { "center_x": 0.5 }
            on_press: app.clear()
